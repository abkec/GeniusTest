<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">


    <TextView
        android:id="@+id/tv_questionAns2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:background="#F50057"
        android:gravity="center"
        android:text="61 Comments"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_question1"
        app:layout_constraintHorizontal_bias="0.034"
        app:layout_constraintStart_toStartOf="@+id/tv_question1"
        app:layout_constraintTop_toTopOf="@+id/tv_question1" />

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="13dp"
        android:layout_toEndOf="@+id/tv_questionAns2"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="What is this"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_question1"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toEndOf="@+id/tv_questionAns"
        app:layout_constraintTop_toTopOf="@+id/tv_questionAns" />

    <TextView
        android:id="@+id/tv_question2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_question"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@+id/tv_questionAns2"
        android:ellipsize="end"
        android:singleLine="true" />

    <TextView
        android:id="@+id/forumID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:text="TextView"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/forumimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:text="TextView"
        android:visibility="invisible" />
</RelativeLayout>