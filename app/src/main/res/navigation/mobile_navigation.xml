<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_course">

    <fragment
        android:id="@+id/navigation_course"
        android:name="com.example.test.ui.course.CourseFragment"
        tools:layout="@layout/fragment_course"/>

    <fragment
        android:id="@+id/navigation_forum"
        android:name="com.example.test.ui.forum.ForumFragment"
        tools:layout="@layout/fragment_forum"
        />

    <fragment
        android:id="@+id/navigation_quiz"
        android:name="com.example.test.ui.quiz.QuizFragment"
        tools:layout="@layout/fragment_quiz">

        <action
            android:id="@+id/action_nav_quiz_to_quizQuestion"
            app:destination="@id/quizQuestion" />
    </fragment>

    <fragment
        android:id="@+id/quizQuestion"
        android:name="com.example.test.QuizQuestionFragment"
        android:label="Quiz Fragment"
        tools:layout="@layout/quiz_question" />



    <fragment
        android:id="@+id/navigation_stats"
        android:name="com.example.test.ui.stats.StatsFragment"
        />


</navigation>